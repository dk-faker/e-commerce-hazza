<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articleFragment">
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.hazza.ui.main.categorias.CategoriasFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_categorias">
        <action
            android:id="@+id/action_articleFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.example.hazza.ui.main.productos.ProductoFragment"
        android:label="fragment_article_details"
        tools:layout="@layout/fragment_producto">
    </fragment>
</navigation>